# frozen_string_literal: true

# Source for Ruby gems
source "https://rubygems.org"

# Jekyll gem for building the site
gem "jekyll", "~> 4.3.4"

# Just the Docs theme, pinned to version 0.10.1
gem "just-the-docs", "= 0.10.1"

# Jekyll plugins
gem "jekyll-feed" # RSS feed support
gem "jekyll-seo-tag" # SEO metadata support
gem "jekyll-sitemap" # Sitemap generator
gem "jekyll-include-cache" # Caching for includes
gem "webrick", "~> 1.7" # Required for Ruby >= 3.0 and Jekyll <= 4.3.4

# Sass converter for Jekyll (used for processing SCSS files)
gem "jekyll-sass-converter", "~> 3.1"

# Optional: Add the Ruby version for compatibility
ruby "3.3.7"

